  "engines": {
    "node": ">=14"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/architect/plugin-budget-watch.git"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@architect/architect": "^9.0.1"
  },
  "devDependencies": {
    "@architect/eslint-config": "^2.0.0",
    "eslint": "^7.11.0",
    "tap-spec": "^5.0.0",
    "tape": "^5.3.1"
  },
  "files": [
    "index.js",
    "src"
  ],
  "eslintConfig": {
    "extends": "@architect/eslint-config"
  }
}
