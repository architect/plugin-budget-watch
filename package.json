{
  "name": "@architect/plugin-budget-watch",
  "version": "0.0.0",
  "description": "Architect plugin for limiting cost of deployed apps",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . --fix",
    "hydrate:trigger": "cd src/ && npm i",
